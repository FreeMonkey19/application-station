{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsc-ally/recommended",
    "prettier/flowtype",
    "prettier/react",
    "prettier/standard",
    "prettier",
    "plugin:prettier/recommended"
  ],

  "plugins": ["prettier", "react", "import", "jsx-ally", "react-hooks"],

  "rules": {
    "react/prop-types": 0,
    "no-console": 1,
    "react-hooks/rules-of-hooks": 2,
    "react-hooks/exhaustive-deps": 1,
    "prettier/prettier": "error"
  }
}
